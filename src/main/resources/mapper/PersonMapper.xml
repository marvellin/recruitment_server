<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.scau.linyuanbin.recruitment.mapper.PersonMapper">
    <resultMap id="personMap" type="Person">
        <id column="personId" property="personId"></id>
        <result column="userId" property="userId"></result>

        <association property="user" column="userId" select=""></association>
        <association property="resume" column="personId" select=""></association>
        <association property="defaultResume" column="personId" select=""></association>
        <association property="basicinfo" column="personId" select=""></association>
        <collection property="attachMentResumeList" column="personId" select=""></collection>
        <collection property="deliveryList" column="personId" select=""></collection>
    </resultMap>

    <!--根据personId查找对象-->
    <select id="getPersonBypersonId" parameterType="java.lang.Integer" resultMap="personMap">

    </select>

    <!--根据userId查找对象-->
    <select id="getPersonByuserId" parameterType="java.lang.Integer" resultMap="personMap">

    </select>

    <!--新增对象-->
    <insert id="insertPerson" parameterType="Person" useGeneratedKeys="true" keyProperty="personId" keyColumn="personId">

    </insert>
</mapper>