<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.scau.linyuanbin.recruitment.mapper.CompanyMapper">
    <resultMap id="companyMap" type="Company">
        <id column="companyId" property="companyId"></id>
        <result column="userId" property="userId"></result>
        <result column="intro" property="intro"></result>
<!--        <result column="" property=""></result>-->

        <association property="user" column="userId" select=""></association>
        <association property="companyStage" column="companyId" select=""></association>
        <association property="companyMember" column="companyId" select=""></association>
        <association property="companyDetail" column="companyId" select=""></association>
        <collection property="positionList" column="companyId" select=""></collection>
        <collection property="reportList" column="companyId" select=""></collection>
        <collection property="productList" column="companyId" select=""></collection>
    </resultMap>

    <!--根据companyId获得单个对象-->
    <select id="getCompanyByCompanyId" parameterType="java.lang.Integer" resultMap="companyMap">

    </select>

    <!--根据userId获得单个对象-->
    <select id="getCompanyByUserId" parameterType="java.lang.Integer" resultMap="companyMap">

    </select>

    <!--更新对象-->
    <update id="updateCompany" parameterType="Company">

    </update>

    <!--新增对象-->
    <insert id="insertCompany" parameterType="Company" useGeneratedKeys="true" keyProperty="companyId" keyColumn="companyId">

    </insert>
</mapper>